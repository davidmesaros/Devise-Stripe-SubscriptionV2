<%= form_for @website, :html => { :class => "form-horizontal website" } do |f| %>

  <% if @website.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@website.errors.count, "error") %> prohibited this website from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @website.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name,:placeholder => "Please enter your Website address ie www.example.com", :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :product, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product, :placeholder => "Please enter a Key Product/Service that you would like to advertise", :class => 'form-control' %>
    </div>
    <%=f.error_span(:product) %>
  </div>
  <div class="form-group">
    <%= f.label :product1, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product1, :placeholder => "Please enter Another Key Product/Service (you can leave this Blank) ", :class => 'form-control' %>
    </div>
    <%=f.error_span(:product1) %>
  </div>
  <div class="form-group">
    <%= f.label :product2, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product2, :placeholder => "Please enter Another Key Product/ Service (you can leave this Blank) ", :class => 'form-control' %>
    </div>
    <%=f.error_span(:product2) %>
  </div>

    <% if current_user.admin.present? %>
        <div class="form-group">
          <%= f.label :user_id, :class => 'control-label col-lg-2' %>
          <div class="col-lg-10">
            <%= f.text_field :user_id, :class => 'form-control' %>
          </div>
          <%=f.error_span(:user_id) %>
        </div>

        <div class="form-group">
          <%= f.label :created_at, :class => 'control-label col-lg-2' %>
          <div class="col-lg-10">
            <%= f.text_field :created_at, :class => 'form-control' %>
          </div>
          <%=f.error_span(:created_at) %>
        </div>

        <div class="form-group" onclick="advertising()" >
          <%= f.label :advertising, :class => 'control-label col-lg-2' %>
          <div class="col-lg-10">
            <%= f.text_field :advertising, :class => 'form-control' %>
          </div>
          <%=f.error_span(:advertising) %>
        </div>

        <div class="form-group" onclick="subscribed()">
          <%= f.label :subscribed, :class => 'control-label col-lg-2' %>
          <div class="col-lg-10">
            <%= f.text_field :subscribed, :class => 'form-control' %>
          </div>
          <%=f.error_span(:subscribed) %>
        </div>

    <% end %>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Submit Details", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
