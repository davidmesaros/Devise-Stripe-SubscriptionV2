<%= form_tag subscriber_path(1), method: :put do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $375.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Swiftads Monthly Plan"
          data-amount="37500"
          data-image= <%= image_path 'Swiftads-logo.png' %>
          data-locale="auto"
          data-currency="aud">

        </script>
        <br>
        <br>
        <span> You can Cancel anytime you want</span>
<% end %>
