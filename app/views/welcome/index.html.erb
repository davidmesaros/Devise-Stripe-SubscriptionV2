<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
    <%if current_user.admin.present? %>
      
      <%= link_to "Websites List", websites_path, class: "btn btn-primary" %>
      <%= link_to "Users List", users_path, class: "btn btn-warning" %>
      <%= link_to "Advertises List", advertises_path, class: "btn btn-primary" %>

    <% else %>
        <br>
        <% if current_user.websites.present? %>
            
              <% if created_ad.advertising ==  true  && !created_ad.subscribed.nil? && !created_ad.subscribed.present? %>
                 <%= link_to "Your Ad is Ready 'Activate Now'", website_path(created_ad.id), class: "btn btn-primary" %>
                

              <% elsif created_ad.subscribed.present? %>
                  <%= link_to "Your DashBoard is Ready ", website_path(created_ad.id), class: "btn btn-warning" %>
                  <br>
                  <br>
                    <%= link_to 'Have another Website Site', new_website_path, class: "btn btn-primary" %>
              <% else %>
                  <% current_user.websites.each do |website| %>
                    <% if website.advertising == false %>
                      <%= link_to "You have an Ad that's Getting Created", website_path(website), class: "btn btn-warning" %>
                      <% end %>
                    <% end %>
              <% end %>
        
        <% else %>
            <h5> With Only a few small Clicks we'll have you Advertsing on Google in no time </h5>
          
            <br>
            <%= link_to 'Lets Start with the Website', new_website_path, class: "btn btn-primary" %>
        <% end %>
    <% end %> 

  
  
<% else %>
<div class="jumbotron">
  <h2>Welcome to Swiftads!</h2>
    <p class="lead">
      We love managing your Google Advertising. Sign up!
    </p>
</div>
  <div class="row">
    <div class="plans clearfix">
      <div class="col-lg-6 col-lg-offset-1 plan">
        <h2>Swiftads Package</h2>
        <div class="features">
          <ul>
            <li> Swiftads create the an Ad based on Google's Keywords </li>
            <li>Your Ad will be on Top Position on Google Search</li>
            <li>Swiftads works smartly with Google to optimise your ad and get the results with miniumal spending</li>
            <li>Only Get Charge when someone clicks onto your Ad</li>
            <li>Price: Max amount is $300 / month that goes directly to Google </br>
            + swiftads fee: 25% (ie total amount $375/month) </li>
          </ul>
        </div>
        
      </div>
    </div>
    <div class="row">
      <div class="plans clearfix">
        <div class="col-lg-6 col-lg-offset-4 plan">
          <p>
            <br>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-lg sign-up' %>
          </p>
        </div>
      </div>
    </div>
    <!--  -->
  </div>
<% end %>

