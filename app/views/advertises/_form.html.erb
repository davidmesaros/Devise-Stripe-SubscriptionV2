<%= form_for @advertise, :html => { :class => "form-horizontal advertise" } do |f| %>

  <% if @advertise.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@advertise.errors.count, "error") %> prohibited this advertise from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @advertise.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>

  <div class="form-group">
    <%= f.label :website_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :website_id , :class => 'form-control' %>
    </div>
    <%=f.error_span(:website_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                advertises_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<table class="table table-striped">
  <thead>
    <tr>
        <th>Website Name</th>
        <th>Website ID</th>
        <th>Website Ad</th>

    </tr>
  </thead>
  <tbody>
    <% current_website.each do |website| %>
    <tr>
      <% if website.advertising == false %>
        <td><%= website.name %></td>
        <td><%= website.id %></td>
        <td><%= website.advertising %></td>
    </tr>
      <% end %>
    <% end %>
  </tbody>
